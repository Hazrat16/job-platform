{
  "info": {
    "name": "Chat Service API",
    "description": "Complete collection for testing the advanced chat service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/test",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "test"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiverId\": \"{{receiver_user_id}}\",\n  \"message\": \"Hello! This is a test message from Postman\",\n  \"messageType\": \"text\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/chat/send",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "chat", "send"]
            }
          }
        },
        {
          "name": "Get Conversations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/chat/conversations",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "chat", "conversations"]
            }
          }
        },
        {
          "name": "Get Conversation with User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/chat/conversation/{{user_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "chat", "conversation", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Get Message History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/chat/conversation/{{conversation_id}}/messages?page=1&limit=20",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": [
                "api",
                "chat",
                "conversation",
                "{{conversation_id}}",
                "messages"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Search Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/chat/search?query=hello&conversationId={{conversation_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "chat", "search"],
              "query": [
                {
                  "key": "query",
                  "value": "hello"
                },
                {
                  "key": "conversationId",
                  "value": "{{conversation_id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Mark Messages as Read",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"senderId\": \"{{sender_user_id}}\",\n  \"conversationId\": \"{{conversation_id}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/chat/mark-read",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "chat", "mark-read"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "jwt_token",
      "value": "YOUR_JWT_TOKEN_HERE",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "USER_ID_HERE",
      "type": "string"
    },
    {
      "key": "receiver_user_id",
      "value": "RECEIVER_USER_ID_HERE",
      "type": "string"
    },
    {
      "key": "conversation_id",
      "value": "CONVERSATION_ID_HERE",
      "type": "string"
    },
    {
      "key": "sender_user_id",
      "value": "SENDER_USER_ID_HERE",
      "type": "string"
    }
  ]
}
